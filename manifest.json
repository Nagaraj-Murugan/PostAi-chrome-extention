{
  "manifest_version": 3,
  "name": "PostAi",
  "version": "1.0",
  "description": "Get summary and images from API",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": {
      "16": "images/pen-field16.png",
      "48": "images/pen-field 32.png",
      "128": "images/pen-field 128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/pen-field16.png",
    "48": "images/pen-field 32.png",
    "128": "images/pen-field 128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
